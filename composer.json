{
    "name": "wordpressvip/local",
    "description": "Local WordPress VIP-compatible setup without Docker",
    "license": "proprietary",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.9",
        "wp-coding-standards/wpcs": "3.1",
        "automattic/vipwpcs": "^3.0",
        "phpcsstandards/phpcsutils": "^1.1",
        "phpcsstandards/phpcsextra": "^1.3",
        "sirbrillig/phpcs-variable-analysis": "^2.12"
    },
    "scripts": {
        "lint": "phpcs --standard=WordPressVIPMinimum wp-content/"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
